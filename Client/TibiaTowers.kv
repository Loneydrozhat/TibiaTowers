#:kivy 1.0.9

<VocationSelectScreen>:
    BoxLayout:
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': .5, 'center_y': .5}
        orientation: "vertical"
        Label:
            size_hint: 1, 0.2
            text: "Vocation"
        Button:
            size_hint: 1, 0.2
            text: "Master Sorcerer"
            on_press: root.select_vocation("MS")
        Button:
            size_hint: 1, 0.2
            text: "Elder Druid"
            on_press: root.select_vocation("ED")
        Button:
            size_hint: 1, 0.2
            text: "Elite Knight"
            on_press: root.select_vocation("EK")
        Button:
            size_hint: 1, 0.2
            text: "Royal Paladin"
            on_press: root.select_vocation("RP")

<GameScreen>:
    BoxLayout:
        Button:
            text: "Play"